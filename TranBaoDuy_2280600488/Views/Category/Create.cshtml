@model TranBaoDuy_2280600488.Models.Category

@{
    ViewData["Title"] = "Thêm danh mục mới";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success mt-3">Tạo mới</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Quay lại danh sách</a>

