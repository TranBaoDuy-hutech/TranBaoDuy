@model IEnumerable<TranBaoDuy_2280600488.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm danh mục</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">Xoá</a>
                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>
